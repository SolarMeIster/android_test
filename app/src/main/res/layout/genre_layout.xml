<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnMOBA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/genreButtonColor"
        android:minHeight="5dp"
        android:minWidth="10dp"
        android:textColor="@color/genreTextColor"
        android:textSize="11sp"
        app:cornerRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MOBA" />

    <Button
        android:id="@+id/btnMultiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:minHeight="5dp"
        android:minWidth="10dp"
        android:textSize="11sp"
        android:backgroundTint="@color/genreButtonColor"
        android:textColor="@color/genreTextColor"
        app:cornerRadius="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMOBA"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MOBA"/>

    <Button
        android:id="@+id/btnStrategy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:minHeight="5dp"
        android:minWidth="10dp"
        android:textSize="11sp"
        android:backgroundTint="@color/genreButtonColor"
        android:textColor="@color/genreTextColor"
        android:layout_marginTop="8dp"
        app:cornerRadius="100dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnMultiplayer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MOBA"/>

</androidx.constraintlayout.widget.ConstraintLayout>